<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/text_secondary_grey"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">


    <!-- Shape for the ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"/>
            <!-- color attribute is required but this doesn't show anywhere, little odd? -->
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <!-- Below item is for the initial layout, color, and background for the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/text_secondary_grey" />
        </shape>
    </item>
</ripple>